{
  "name": "consigliere",
  "version": "0.4.0",
  "description": "üçù A simple to use JSON logger",
  "keywords": [
    "logger",
    "json",
    "log",
    "üçù"
  ],
  "author": "omrilotan",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/omrilotan/consigliere"
  },
  "main": "./index.js",
  "type": "commonjs",
  "types": "./index.d.ts",
  "module": "./index.mjs",
  "browser": "./index.mjs",
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "default": "./index.js",
      "browser": {
        "import": "./index.mjs",
        "require": "./index.js"
      },
      "node": {
        "import": "./index.mjs",
        "require": "./index.js"
      }
    }
  },
  "workspaces": [
    "tests/cjs",
    "tests/esm"
  ],
  "scripts": {
    "build": "esbuild src/consigliere.ts --format=cjs --bundle --outfile=index.js && esbuild src/consigliere.ts --format=esm --bundle --outfile=index.mjs",
    "declare": "tsc --declaration --emitDeclarationOnly --out index.d.ts",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "postbuild": "npm t -w cjs && npm t -w esm",
    "prepublishOnly": "npm run build; npm run declare",
    "pretest": "npm run build; npm run declare",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest ."
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "esbuild": "^0.14.48",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
